{
  "name": "itemization",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "lint:css": "stylelint 'app/**/*.css'",
    "lint:css:fix": "stylelint 'app/**/*.css' --fix",
    "format": "prettier --write 'app/**/*.{js,ts,jsx,tsx,css}'",
    "prepare": "husky"
